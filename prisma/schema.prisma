generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id       Int      @id @default(autoincrement())
  title    String
  body     String
  steps    Step[]
}

model Step {
  id          Int      @id @default(autoincrement())
  description String
  imageUrl    String
  recipeId    Int
  Recipe      Recipe   @relation(fields: [recipeId], references: [id])
}
